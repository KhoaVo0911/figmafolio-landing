---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative group">
  <DropdownContainer class="group">
    <button
      class="flex items-center gap-1 px-3 py-2 text-base font-medium text-gray-700 hover:text-black transition-colors duration-150">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180 transition-transform duration-200">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={["lg:absolute w-full lg:w-56 z-20 transition-all duration-200", lastItem ? "lg:right-0 origin-top-right" : "lg:left-0 origin-top-left"]}>
        <div
          class="px-2 py-2 lg:bg-white lg:rounded-xl lg:shadow-lg lg:border flex flex-col gap-1">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 hover:text-black transition-colors duration-150">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
