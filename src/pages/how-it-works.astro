---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import guideOne from "../assets/guide_one_image_v2.webp";
import landingResponsive from "../assets/publish_as_responsive_landing.png";
import multipleProject from "../assets/multiple_project_landing.png";
import landingCustomDomain from "../assets/landing_custom_domain.png";
import landingPasswordProtection from "../assets/password_protection_landing.png";
import Container from "../components/container.astro";
