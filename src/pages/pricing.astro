<Layout title="Pricing">
  <section class="bg-white pt-8 pb-4 md:pt-14 md:pb-6">
    <div class="max-w-4xl mx-auto text-center mt-14 mb-6">
      <h1 class="text-5xl md:text-6xl font-bold mb-3">
        Pick a plan to suit your needs
      </h1>
      <p class="text-xl text-slate-600 mb-6">
        Try it free (7 or 15 days) and cancel anytime during the trial period.
      </p>
      <!-- Thay tháº¿ toggle switch -->
      <div class="switch-container">
        <label class="switch">
          <input
            type="checkbox"
            id="pricing-toggle"
            aria-label="Toggle pricing: monthly or yearly"
          />
          <span class="slider round">
            <span class="monthly-text">Monthly</span>
            <div class="yearly-text">
              <span>Yearly</span>
              <span class="save-label">Save 20%</span>
            </div>
          </span>
        </label>
      </div>
    </div>
    <div
