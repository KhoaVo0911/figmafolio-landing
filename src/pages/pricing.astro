  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const toggle = document.getElementById("pricing-toggle");
      function setPricing(type) {
        if (type === "monthly") {
          document.getElementById("basic-price").innerText = "$3";
          document.getElementById("solo-price").innerText = "$6";
          document.getElementById("pro-price").innerText = "$19";
          document
            .querySelectorAll(".pricing-card .save-label")
            .forEach((e) => e.classList.add("hidden"));
          document
            .querySelector(".switch-container .save-label")
            .classList.remove("show");
        } else {
          document.getElementById("basic-price").innerText = "$2.4";
          document.getElementById("solo-price").innerText = "$4.8";
          document.getElementById("pro-price").innerText = "$15.2";
          document
            .querySelectorAll(".pricing-card .save-label")
            .forEach((e) => e.classList.remove("hidden"));
          document
            .querySelector(".switch-container .save-label")
            .classList.add("show");
        }
      }
      setPricing("monthly");
      toggle.checked = false;
      toggle.addEventListener("change", function () {
        setPricing(toggle.checked ? "yearly" : "monthly");
      });
    });
